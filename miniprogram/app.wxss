/**app.wxss - 科技蓝紫配色方案**/

/* ============================================
   Design System - Tech Blue Purple Theme
   ============================================ */

/* 基础容器样式 */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 全局字体 */
page,
view,
text {
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

.nav {
  text-align: center;
}

/* ============================================
   Light Mode - CSS Variables
   ============================================ */
page {
  /* 主色调 */
  --primary: #4A7CF3;
  --primary-light: #6B93F5;
  --primary-dark: #3566D9;
  --secondary: #7C5CFF;
  --secondary-light: #9178FF;
  
  /* 渐变 */
  --gradient-primary: linear-gradient(135deg, #4A7CF3 0%, #7C5CFF 100%);
  --gradient-button: linear-gradient(135deg, #4A7CF3 0%, #6B93F5 100%);
  
  /* 背景色 */
  --bg-page: #F5F7FA;
  --bg-card: #FFFFFF;
  --bg-input: #F8FAFC;
  --bg-elevated: #FFFFFF;
  
  /* 文字色 */
  --text-primary: #1A1F36;
  --text-secondary: #64748B;
  --text-muted: #94A3B8;
  --text-inverse: #FFFFFF;
  
  /* 边框 */
  --border-color: #E2E8F0;
  --border-light: #F1F5F9;
  
  /* 状态色 */
  --success: #10B981;
  --warning: #F59E0B;
  --danger: #EF4444;
  --info: #3B82F6;
  
  /* 阴影 */
  --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.05);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -4px rgba(0, 0, 0, 0.1);
  --shadow-primary: 0 4px 14px rgba(74, 124, 243, 0.25);
  
  /* 圆角 */
  --radius-sm: 8rpx;
  --radius-md: 16rpx;
  --radius-lg: 24rpx;
  --radius-xl: 32rpx;
  --radius-full: 9999rpx;
  
  /* TDesign 覆盖 */
  --td-bg-color-container: var(--bg-card);
  --td-bg-color-page: var(--bg-page);
  --td-text-color-primary: var(--text-primary);
  --td-text-color-secondary: var(--text-secondary);
  --td-text-color-placeholder: var(--text-muted);
  --td-border-color: var(--border-color);
  --td-brand-color: var(--primary);
  --td-font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Segoe UI', Roboto, sans-serif;
  
  background-color: var(--bg-page);
  color: var(--text-primary);
  transition: background-color 0.3s ease, color 0.3s ease;
}

/* ============================================
   Dark Mode - CSS Variables Override
   ============================================ */
@media (prefers-color-scheme: dark) {
  page {
    /* 主色调 - 稍微提亮 */
    --primary: #5D8CF5;
    --primary-light: #7BA3F7;
    --primary-dark: #4A7CF3;
    --secondary: #9178FF;
    --secondary-light: #A892FF;
    
    /* 渐变 */
    --gradient-primary: linear-gradient(135deg, #5D8CF5 0%, #9178FF 100%);
    --gradient-button: linear-gradient(135deg, #5D8CF5 0%, #7BA3F7 100%);
    
    /* 背景色 */
    --bg-page: #0D1117;
    --bg-card: #161B22;
    --bg-input: #21262D;
    --bg-elevated: #1C2128;
    
    /* 文字色 */
    --text-primary: #F0F6FC;
    --text-secondary: #8B949E;
    --text-muted: #6E7681;
    --text-inverse: #0D1117;
    
    /* 边框 */
    --border-color: #30363D;
    --border-light: #21262D;
    
    /* 阴影 - 深色模式使用发光效果 */
    --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.3);
    --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.4);
    --shadow-lg: 0 10px 15px rgba(0, 0, 0, 0.5);
    --shadow-primary: 0 4px 20px rgba(93, 140, 245, 0.3);
    
    /* TDesign 覆盖 */
    --td-bg-color-container: var(--bg-card);
    --td-bg-color-page: var(--bg-page);
    --td-text-color-primary: var(--text-primary);
    --td-text-color-secondary: var(--text-secondary);
    --td-text-color-placeholder: var(--text-muted);
    --td-border-color: var(--border-color);
    --td-brand-color: var(--primary);
    --td-cell-bg-color: var(--bg-card);
    --td-navbar-bg-color: var(--bg-card);
    --td-tab-bar-bg-color: var(--bg-card);
    --td-tab-bar-item-color: var(--text-muted);
    --td-tab-bar-item-active-color: var(--primary);
    
    background-color: var(--bg-page);
  }
  
  /* TDesign Cell 组件深色适配 */
  .t-cell {
    background-color: var(--bg-card) !important;
  }
  
  .t-cell .t-cell__title,
  .t-cell__title-text,
  t-cell .t-cell__title {
    color: var(--text-primary) !important;
  }
  
  .t-cell .t-cell__note {
    color: var(--text-secondary) !important;
  }
  
  .t-cell .t-cell__left-icon,
  .t-icon {
    color: var(--text-primary) !important;
  }
  
  /* TDesign Navbar 深色适配 */
  .t-navbar {
    background-color: var(--bg-card) !important;
    border-bottom: 1px solid var(--border-color);
  }
  
  .t-navbar .t-navbar__title,
  .t-navbar__title {
    color: var(--text-primary) !important;
  }
  
  .t-navbar .t-icon {
    color: var(--text-primary) !important;
  }
  
  /* TDesign Tab Bar 深色适配 */
  .t-tab-bar {
    background-color: var(--bg-card) !important;
    border-top: 1px solid var(--border-color);
  }
  
  .t-tab-bar-item {
    --td-tab-bar-item-icon-color: var(--text-muted) !important;
  }
  
  .t-tab-bar-item.is-active .t-icon,
  .t-tab-bar-item [aria-selected="true"] .t-icon {
    color: var(--primary) !important;
  }
  
  .t-tab-bar-item.is-active .t-tab-bar-item__text,
  .t-tab-bar-item[aria-selected="true"] .t-tab-bar-item__text {
    color: var(--primary) !important;
  }
  
  .t-tab-bar-item .t-icon {
    color: var(--text-muted) !important;
  }
  
  .t-tab-bar-item .t-tab-bar-item__text {
    color: var(--text-muted) !important;
  }
  
  /* TDesign Button 深色适配 */
  .t-button--primary {
    background: var(--gradient-primary) !important;
    border: none !important;
  }
  
  .t-button--default {
    background-color: var(--bg-input) !important;
    border-color: var(--border-color) !important;
    color: var(--text-primary) !important;
  }
  
  /* TDesign Collapse 深色适配 */
  .t-collapse-panel {
    background-color: var(--bg-card) !important;
  }
  
  .t-collapse-panel__header {
    color: var(--text-primary) !important;
  }
  
  /* TDesign Empty 深色适配 */
  .t-empty__description {
    color: var(--text-secondary) !important;
  }
}

/* ============================================
   通用组件样式
   ============================================ */

/* 毛玻璃效果 */
.glass-effect {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
}

@media (prefers-color-scheme: dark) {
  .glass-effect {
    background: rgba(22, 27, 34, 0.85);
  }
}

/* 渐变按钮基础样式 */
.btn-gradient {
  background: var(--gradient-primary);
  color: var(--text-inverse);
  border: none;
  border-radius: var(--radius-full);
  box-shadow: var(--shadow-primary);
  transition: all 0.2s ease;
}

.btn-gradient:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* 卡片基础样式 */
.card {
  background-color: var(--bg-card);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  border: 1px solid var(--border-light);
}

/* 输入框样式 */
.input-field {
  background-color: var(--bg-input);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  color: var(--text-primary);
  transition: border-color 0.2s ease, box-shadow 0.2s ease;
}

.input-field:focus {
  border-color: var(--primary);
  box-shadow: 0 0 0 3px rgba(74, 124, 243, 0.15);
}

/* 状态标签 */
.badge {
  display: inline-flex;
  align-items: center;
  padding: 4rpx 16rpx;
  border-radius: var(--radius-full);
  font-size: 24rpx;
  font-weight: 500;
}

.badge-primary {
  background: rgba(74, 124, 243, 0.15);
  color: var(--primary);
}

.badge-success {
  background: rgba(16, 185, 129, 0.15);
  color: var(--success);
}

.badge-warning {
  background: rgba(245, 158, 11, 0.15);
  color: var(--warning);
}

.badge-danger {
  background: rgba(239, 68, 68, 0.15);
  color: var(--danger);
}

/* 分隔线 */
.divider {
  height: 1px;
  background-color: var(--border-color);
  margin: 24rpx 0;
}

/* 图标按钮 */
.icon-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 72rpx;
  height: 72rpx;
  border-radius: var(--radius-full);
  background-color: var(--bg-input);
  color: var(--text-secondary);
  transition: all 0.2s ease;
}

.icon-btn:active {
  background-color: var(--border-color);
  transform: scale(0.95);
}

