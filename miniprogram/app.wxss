/* 容器包裹层，确保背景色铺满且变量穿透 */
.container-wrap {
  min-height: 100vh;
  background-color: var(--bg-page);
  color: var(--text-primary);
  transition: background-color 0.3s ease, color 0.3s ease;
  box-sizing: border-box;
}

