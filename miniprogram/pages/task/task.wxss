/**index.wxss**/
page {
  height: 80vh;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  /* padding-top: 100rpx; */
}

.swiper-component {
  width: 100%;
  height: calc(80vh - 150rpx);
}

swiper-item {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.scroll {
  flex: 1;
  overflow: auto;
}

.header {
  padding: 44rpx;
  color: black;
  flex-shrink: 0;
}
.header-word {
  font-size: 60rpx;
  flex-shrink: 0;
  text-align: center;
  word-wrap: break-word;
}

.header-subtitle {
  font-size: 32rpx;
  flex-shrink: 0;
  text-align: center;
  margin: 20rpx 0;
}

.header-option {
  display: flex;
  justify-content: space-between;
}
.source {
  font-size: 40rpx;
}

.source-name {
  width: 50%;
}

.group-wrapper {
  margin-bottom: 20rpx;
}

.footer {
  display: flex;
  justify-content: flex-end;
}
.btn-cancel,
.btn-submit {
  margin-right: 20rpx;
}

.custom-dots {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 40rpx auto;
}

.dot {
  width: 18rpx;
  height: 18rpx;
  background-color: #dfe0e3;
  border-radius: 9999rpx;
  margin: 0 20rpx;
  opacity: 0.6;
  transform: scale(1);
  transition: all 0.35s cubic-bezier(0.25, 1, 0.5, 1);
}

.dot.active {
  width: 36rpx;
  opacity: 1;
  background-color: #dfe0e3;
  transform: scale(1.1);
}

.custom-cell {
  background-color: #dfe0e3 !important;
  color: black;
}

.custom-cell .van-cell__value {
  text-align: left !important;
  white-space: normal !important;
  word-break: break-word;
}

.custom-cell .van-cell__title,
.custom-cell .van-cell__value {
  color: black !important;
}

.hide {
  display: none;
}

.info-text {
  margin: 20rpx 0;
  text-align: center;
}

.info-message {
  margin-left: 20rpx;
}

.btn-add-group {
  margin-top: 60rpx;
  display: flex;
  justify-content: center;
}

.popup-container {
  padding: 40rpx;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
}

.flex {
  display: flex;
  align-items: center;
  justify-content: center;
}

.longpress-view {
  width: 50vw;
  min-height: 40rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  margin: 20rpx 0;
  color: #999;
  text-align: center;
  font-size: 24rpx;
}

.delete-icon {
  color: #ff4444 !important;
  cursor: pointer;
}

.field-class {
  width: 100rpx;
}

/* 音频组件样式 */
.audio-container {
  display: flex;
  align-items: center;
  padding: 20rpx 32rpx;
  min-height: 100rpx;
}

.audio-label {
  font-size: 28rpx;
  color: #000;
  width: 185rpx;
  flex-shrink: 0;
}

.audio-content {
  flex: 1;
  align-items: center;
  justify-content: space-between;
}

.audio-controls {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

/* 录音按钮样式 */
.record-btn {
  width: 100%;
  background: #fff;
  border: 2rpx solid #dfe0e3;
  border-radius: 9999rpx;
  padding: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  transition: all 0.2s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.record-btn.recording {
  background: #07c160;
  border-color: #07c160;
  transform: scale(1.05);
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
}

.record-btn.recording .mic-icon {
  color: #fff;
}

.record-btn.recording .record-text {
  color: #fff;
}

.mic-icon {
  color: #666;
}

.record-text {
  font-size: 28rpx;
  color: #333;
}

.audio-icon {
  background: #dfe0e3;
  color: #fff;
}

.audio-delete {
  flex-shrink: 0;
  margin-left: 16rpx;
}

@media (prefers-color-scheme: dark) {
  .header {
    padding: 44rpx;
    color: #fff;
  }
  .custom-cell {
    background-color: #dfe0e3 !important;
    color: #000;
  }
  .custom-cell .van-cell__title,
  .custom-cell .van-cell__value {
    color: #000 !important;
  }
  .popup-container {
    background: #000 !important;
  }

  .audio-icon {
    color: #000;
    background: #dfe0e3;
  }

  .record-btn {
    background: #dfe0e3;
    border-color: #dfe0e3;
  }

  .mic-icon {
    color: #000;
  }

  .record-text {
    color: #000;
  }
}
