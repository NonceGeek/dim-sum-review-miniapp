.page {
  background-color: #f6f6f6;
  color: #000;
  padding-bottom: 200rpx;
  min-height: 100vh;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  transition: background-color 0.3s, color 0.3s;
}

.btn-group-scroll {
  width: 100%;
  box-sizing: border-box;
  padding: 24rpx 0;
  background-color: var(--td-bg-color-container, #fff);
}

.btn-group-fixed {
  position: fixed;
  left: 0;
  right: 0;
  z-index: 10;
}

.btn-group {
  display: flex;
  padding: 0 24rpx;
  gap: 16rpx;
  box-sizing: border-box;
}

.content-wrapper {
  padding-top: 120rpx;
}

.btn-type {
  flex-shrink: 0 !important;
}

.container {
  height: 60vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.more-view {
  text-align: center;
  padding: 32rpx 0;
}

.mine-container {
  display: flex;
  flex-direction: column;
  min-height: 80vh;
  justify-content: space-between;
  padding: 32rpx 0;
}

.logout-container {
  padding: 32rpx;
  padding-bottom: 200rpx; /* Space for tab bar */
}

.card-wrapper {
  margin: 0 32rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.custom-cell-group-card {
  background-color: #fff;
}

.custom-cell-mine .t-cell__title {
  width: 100rpx;
}

/* Dark Mode - 页面特有样式 */
@media (prefers-color-scheme: dark) {
  .page {
    background-color: #000;
  }

  .btn-group-scroll {
    background-color: #000;
  }

  .mine-container {
    background-color: #000;
  }

  .custom-cell-group-card {
    border: 1px solid #dfe0e3;
  }
}
