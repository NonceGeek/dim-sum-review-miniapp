/* completed.wxss - 已完成任务页样式 */

.page {
  background-color: var(--bg-page);
  color: var(--text-primary);
  min-height: 100vh;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  transition: background-color 0.3s ease, color 0.3s ease;
}

/* ============================================
   筛选按钮组
   ============================================ */
.btn-group-scroll {
  width: 100%;
  box-sizing: border-box;
  padding: 24rpx 0;
  background-color: var(--bg-card);
  border-bottom: 1px solid var(--border-light);
  white-space: nowrap;
}

.btn-group-fixed {
  position: fixed;
  left: 0;
  right: 0;
  z-index: 10;
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
}

.btn-group {
  display: inline-flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  padding: 0 24rpx;
  gap: 16rpx;
  box-sizing: border-box;
}

.content-wrapper {
  padding-top: 160rpx;
  padding-bottom: 40rpx;
}

/* 筛选按钮样式 */
.btn-type {
  flex: 0 0 auto !important;
  align-self: flex-start !important;
  width: auto !important;
  max-width: 100%;
  display: inline-flex !important;
  margin: 0 !important;
  justify-content: flex-start !important;
  border-radius: var(--radius-full) !important;
  font-weight: 500 !important;
  transition: all 0.2s ease !important;
}

/* TDesign 按钮样式覆盖 - primary状态 */
.btn-type.t-button--primary {
  background: var(--gradient-primary) !important;
  border: none !important;
  color: #fff !important;
  box-shadow: var(--shadow-primary) !important;
}

/* TDesign 按钮样式覆盖 - default状态 */
.btn-type.t-button--default {
  background-color: var(--bg-input) !important;
  border: 1px solid var(--border-color) !important;
  color: var(--text-secondary) !important;
}

.btn-type.t-button--default:active {
  background-color: var(--border-color) !important;
}

/* ============================================
   任务列表
   ============================================ */
.t-cell-group {
  padding: 0 24rpx;
}

/* 自定义 Cell 样式 */
.t-cell {
  margin-bottom: 16rpx !important;
  border-radius: var(--radius-lg) !important;
  background-color: var(--bg-card) !important;
  box-shadow: var(--shadow-sm) !important;
  border: 1px solid var(--border-light) !important;
  overflow: hidden !important;
  transition: all 0.2s ease !important;
}

.t-cell:active {
  transform: scale(0.995);
  box-shadow: var(--shadow-md) !important;
}

/* Cell 左侧图标 - 已完成使用成功色 */
.t-cell .t-cell__left-icon {
  color: var(--success) !important;
}

/* Cell 标题 */
.t-cell .t-cell__title {
  color: var(--text-primary) !important;
  font-weight: 500 !important;
}

/* Cell 箭头 */
.t-cell .t-cell__right-icon {
  color: var(--text-muted) !important;
}

/* 空状态容器 */
.container {
  height: 60vh;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.container .t-empty__description {
  color: var(--text-secondary) !important;
}

/* 加载更多 */
.more-view {
  text-align: center;
  padding: 32rpx 0;
}

.more-view .btn-type {
  color: var(--primary) !important;
  border: none !important;
  background: transparent !important;
}

/* ============================================
   Dark Mode
   ============================================ */
@media (prefers-color-scheme: dark) {
  .page {
    background-color: var(--bg-page);
    color: var(--text-primary);
  }

  .btn-group-scroll {
    background-color: rgba(22, 27, 34, 0.85);
    border-bottom-color: var(--border-color);
  }
  
  .t-cell {
    background-color: var(--bg-card) !important;
    border-color: var(--border-color) !important;
  }
  
  .btn-type.t-button--default {
    background-color: var(--bg-input) !important;
    border-color: var(--border-color) !important;
    color: var(--text-secondary) !important;
  }
}
